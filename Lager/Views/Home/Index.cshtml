@using System.Data;
@model DataSet;

@{
    ViewData["Title"] = "Home Page";
}
<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal">Better API</h1>
        <p class="lead font-weight-normal">The only API you'll ever need. The Better API.</p>
        <a class="btn btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Contact">Contact us</a>
    </div>
</div>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">Pricing</h1>
    <p class="lead">This is our price table. Contact us which package you'll need and we'll send you a checkout link together with an API key.</p>
</div>

<div class="card-deck mb-3 text-center">
    @foreach (DataRow row in Model.Tables[0].Rows)
    {
    <div class="card mb-4 shadow-sm">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">
                @row["ItemName"]
            </h4>
        </div>
        <div class="card-body">
            <h1 class="card-title pricing-card-title">
                $@row["Price"] <small class="text-muted">/ mo</small>
            </h1>
            <ul class="list-unstyled mt-3 mb-4">
                <li>
                    @row["Requests"] requests / mo
                </li>
                <li>
                    @row["Support"]
                </li>
            </ul>
            <a class="btn btn-lg btn-block btn-outline-primary" asp-area="" asp-controller="Home" asp-action="Contact">Contact us</a>
        </div>
    </div>
    }
</div>